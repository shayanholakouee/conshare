<h1> Weolcome <%= @user.username %> </h1>
<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <%= gravatar_for @user, size: 150  %>
    </div>
    <div>
      <table>
        <th>Username</th>
        <th>Email</th>
        <tr>
          <td><%= @user.username %></td>
          <td>| <%= @user.email %> |</td>
        </tr>
      </table>
    </div>
    <div align="center">
      <%= render 'articles/articles', obj: @user.articles %>
    </div>
</div>